    "aes-256-gcm",
    "hkdf",
    "webcrypto",
    "tetrahedron",
    "k4-topology"
  ],
  "author": "P31 Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/p31labs/node-zero.git"
  },
  "homepage": "https://github.com/p31labs/node-zero#readme",
  "bugs": {
    "url": "https://github.com/p31labs/node-zero/issues"
  },
  "sideEffects": false,
